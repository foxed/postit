<h4>Register a new user</h4>

<div class='well'>
  <%= form_for @user do |f| %>
  <%= render 'shared/errors', obj: @user %>
  <div class='control-group'>
  	<%= f.label :name %>
  	<%= f.text_field :name %>
  </div>
  <div class='control-group'>
  	<%= f.label :password %>
  	<%= f.password_field :password %>
  </div>
  <%= f.submit "Register", class: "btn btn-primary" %>
  <% end %>
 </div>

